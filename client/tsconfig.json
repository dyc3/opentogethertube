{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"target": "es2018",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"jsx": "preserve",
		"ignoreDeprecations": "6.0"
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"tests/**/*.ts",
		"tests/**/*.tsx",
		"cypress.config.ts"
	],
	"exclude": ["node_modules", "dist", "ts-out"]
}
